<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Website - Home</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
        }
        header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 10px 0;
            z-index: 1000;
        }
        nav {
            text-align: center;
        }
        nav a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            font-size: 18px;
        }
        #slideshow {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }
        .slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            opacity: 0;
            transition: opacity 2s ease-in-out, transform 10s ease-in-out;
        }
        .slide.active {
            opacity: 1;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <a href="index.html">Home</a>
            <a href="astro.html">Astro Images</a>
            <a href="about.html">About Me</a>
            <a href="hikes.html">Hikes</a>
        </nav>
    </header>

    <div id="slideshow"></div>

    <script>
        const images = [
            '/api/placeholder/1920/1080?text=Nature+Scene+1',
            '/api/placeholder/1920/1080?text=Cityscape+2',
            '/api/placeholder/1920/1080?text=Mountain+View+3',
            '/api/placeholder/1920/1080?text=Beach+Sunset+4'
        ];

        let currentSlide = 0;
        const slideshow = document.getElementById('slideshow');

        function createSlide(src) {
            const slide = document.createElement('div');
            slide.className = 'slide';
            slide.style.backgroundImage = `url(${src})`;
            return slide;
        }

        function nextSlide() {
            const newSlide = createSlide(images[currentSlide]);
            slideshow.appendChild(newSlide);

            setTimeout(() => {
                newSlide.classList.add('active');
                newSlide.style.transform = 'scale(1.1)';
            }, 100);

            if (slideshow.children.length > 1) {
                const oldSlide = slideshow.children[0];
                oldSlide.style.opacity = '0';
                setTimeout(() => {
                    slideshow.removeChild(oldSlide);
                }, 2000);
            }

            currentSlide = (currentSlide + 1) % images.length;
        }

        nextSlide();
        setInterval(nextSlide, 8000);
    </script>
</body>
</html>